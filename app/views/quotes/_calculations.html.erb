<table id="invoice_calcs" cellpadding="0" cellspacing="0" border="0">
  <tr>
    <th class="c1"><strong>Subtotal</strong></th>
    <td class="c2"><strong><%=h quote.currency_symbol %><%=h fmt_currency(quote.subtotal) %></strong></td>
  </tr>
  <% if quote.use_tax? %>
    <tr>
      <th class="c1"><%=h quote.tax_system %> @ <%= fmt_percentage(quote.tax_percentage) %></th>
      <td class="c2"><%=h quote.currency_symbol %><%=h fmt_currency(quote.tax) %></td>
    </tr>
  <% end %>
  <% if quote.shipping > 0 %>
    <tr>
      <th class="c1">Shipping</th>
      <td class="c2"><%=h quote.currency_symbol %><%=h fmt_currency(quote.shipping) %></td>
    </tr>
  <% end %>
  <tr>
    <th class="c1"><strong>TOTAL</strong></th>
    <td class="c2"><strong><%=h quote.currency_symbol %><%=h fmt_currency(quote.total) %></strong></td>
  </tr>
</table>
