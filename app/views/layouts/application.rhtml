<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
       "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">

<head>
  <meta http-equiv="content-type" content="text/html;charset=utf-8" />
  <title><%= @app_config["app_name"] %> | <%= controller.controller_name.humanize %> <% if controller.action_name != "index" %>- <%= controller.action_name.humanize %><% end %></title>
  <meta name="keywords" content="" />
  <meta name="description" content="" />
  <link rel="Bookmark Icon" href="/favicon.ico" />
  <link rel="shortcut icon" href="/favicon.ico" />
  <%= stylesheet_link_tag "main", :media => "all" %>
  <%= stylesheet_link_tag "print", :media => "print" %>
  <%= javascript_include_tag "application", "prototype", "effects", "behaviour", "cookies", "filter", :cache => "all" %>

</head>

<body>

  <div id="wrapper">
    <div id="header">
      <div id="logo">
        <%= image_tag "fluttervoice.gif", :size => "249x29", :alt => "Fluttervoice", :title => "Fluttervoice" %>
      </div>
      <div id="tools_menu">
        <%= render :partial =>  "layouts/tools_menu" %>
      </div>
      <div id="nav">
        <%= render :partial =>  "layouts/main_nav" %>
      </div>
    </div>
    <div id="content_wrapper">
      <%= @content_for_layout %>
    </div>
    <div id="footer">
      <%= render :partial => "layouts/footer" %>
    </div>
  </div>

<% if ENV['RAILS_ENV'] == 'development' %>
    <div id="debug" style="margin: 40px 5px 5px 5px;">
        <a href="#" onclick="Element.toggle('debug_info');return false" style="text-decoration: none; color: #ccc;">Show Debug Info &#10162;</a>
        <div id="debug_info" style="display: none;">
            <%= debug session %>
            <%= debug params %>
        </div>
    </div>   
<% end %>

<script src="http://www.google-analytics.com/urchin.js" type="text/javascript"></script>
<script type="text/javascript">
_uacct = "<%= @app_config['_uacct'] %>";
_udn="<%= @app_config['domain'] %>";
urchinTracker();
</script>


</body>
</html>
